# Database Configuration
# Use DATABASE_URL for Neon/Production, or individual variables for local dev
# DATABASE_URL=postgresql://user:password@host/dbname

DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=change_this_password
DB_NAME=tunzacare_db
DB_PORT=5432

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration - GENERATE A RANDOM 32-CHARACTER STRING
SESSION_SECRET=change_this_to_random_32_character_string

# Security - GENERATE RANDOM STRINGS
JWT_SECRET=change_this_to_random_64_character_string
ENCRYPTION_KEY=change_this_to_random_32_character_string

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@tunzacare.co.ke

# Payment Configuration (M-Pesa - Get from Safaricom)
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey

# Application Settings
APP_NAME=TunzaCare
APP_URL=http://localhost:3000
LOG_LEVEL=debug
