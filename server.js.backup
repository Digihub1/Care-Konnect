require('dotenv').config();
const express = require('express');
const session = require('express-session');
const flash = require('connect-flash');
const helmet = require('helmet');
const cors = require('cors');
const path = require('path');
const rateLimit = require('express-rate-limit');
const mongoSanitize = require('express-mongo-sanitize');
const xss = require('xss-clean');

// Safely import database module
let sequelize;
try {
    const dbModule = require('./models/database');
    sequelize = dbModule.sequelize;
} catch (dbErr) {
    console.error('âš ï¸  Failed to load database module:', dbErr.message);
    sequelize = null;
}

// Detect platform
const isVercel = !!process.env.VERCEL;

// Validate required environment variables
const requiredEnvVars = ['NODE_ENV', 'SESSION_SECRET'];
// DATABASE_URL can come from Neon connection string OR individual DB variables
const hasDatabaseConfig = process.env.DATABASE_URL || (process.env.DB_HOST && process.env.DB_USER && process.env.DB_NAME);
const missingEnvVars = requiredEnvVars.filter(envVar => !process.env[envVar]);

let missingConfig = false;
if (missingEnvVars.length > 0 || !hasDatabaseConfig) {
    const missing = missingEnvVars.length > 0 ? missingEnvVars.join(', ') : '';
    const dbMissing = !hasDatabaseConfig ? 'DATABASE_URL or (DB_HOST, DB_USER, DB_NAME)' : '';
    const allMissing = [missing, dbMissing].filter(Boolean).join(', ');
    console.error(`âŒ Missing required environment variables: ${allMissing}`);
    missingConfig = true;
    if (!isVercel) {
        // In non-serverless environments we exit because the app requires these to run
        process.exit(1);
    } else {
        // On Vercel, do not exit: export the app instead so the deployment can succeed
        console.warn('Running on Vercel without full config; exporting app for serverless environment.');
    }
}

// Handle unhandled promise rejections
process.on('unhandledRejection', (reason, promise) => {
    console.error('Unhandled Rejection at:', promise, 'reason:', reason);
    process.exit(1);
});

// Create app first
const app = express();

// Define rate limiters BEFORE importing routes
const limiter = rateLimit({
    windowMs: 15 * 60 * 1000, // 15 minutes
    max: 100, // limit each IP to 100 requests per windowMs
    message: 'Too many requests from this IP, please try again later.'
});

// Login rate limiting (stricter) - applied in auth routes
const loginLimiter = rateLimit({
    windowMs: 15 * 60 * 1000,
    max: 5,
    skipSuccessfulRequests: true,
    message: 'Too many login attempts, please try again after 15 minutes.'
});

// Export loginLimiter so routes can import it
module.exports = {
    loginLimiter,
    app
};

// Route imports (now loginLimiter is defined)
let authRoutes, clientRoutes, caregiverRoutes, adminRoutes;
try {
    authRoutes = require('./routes/auth');
    clientRoutes = require('./routes/clients');
    caregiverRoutes = require('./routes/caregiver');
    adminRoutes = require('./routes/admin');
    console.log('âœ… All routes imported successfully');
} catch (routeErr) {
    console.error('âš ï¸  Error importing routes:', routeErr.message);
    // Create dummy routes if actual routes fail to load
    authRoutes = require('express').Router();
    clientRoutes = require('express').Router();
    caregiverRoutes = require('express').Router();
    adminRoutes = require('express').Router();
}

// Security middleware
app.use(helmet({
    contentSecurityPolicy: {
        directives: {
            defaultSrc: ["'self'"],
            styleSrc: ["'self'", "'unsafe-inline'", "https://fonts.googleapis.com"],
            scriptSrc: ["'self'", "'unsafe-inline'"],
            imgSrc: ["'self'", "data:", "https:"],
            fontSrc: ["'self'", "https://fonts.gstatic.com"]
        }
    }
}));

// Apply general rate limiter
app.use(limiter);

// Data sanitization
app.use(mongoSanitize());
app.use(xss());

// CORS Configuration
const corsOptions = {
    origin: process.env.CORS_ORIGIN || '*',
    credentials: !!process.env.CORS_ORIGIN, // Enable credentials only when specific origin is set
    optionsSuccessStatus: 200
};
app.use(cors(corsOptions));

// View engine setup
app.set('view engine', 'ejs');
app.set('views', path.join(__dirname, 'views'));

// Static files
app.use(express.static(path.join(__dirname, 'Public')));

// Body parsing middleware
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Session configuration
app.use(session({
    secret: process.env.SESSION_SECRET,
    resave: false,
    saveUninitialized: false,
    cookie: {
        secure: process.env.NODE_ENV === 'production',
        httpOnly: true,
        maxAge: 24 * 60 * 60 * 1000, // 24 hours
        sameSite: 'strict'
    }
}));

// Flash messages
app.use(flash());

// Global variables middleware
app.use((req, res, next) => {
    res.locals.success_msg = req.flash('success_msg');
    res.locals.error_msg = req.flash('error_msg');
    res.locals.currentUser = req.session.user;
    res.locals.userType = req.session.userType;
    next();
});

// Routes (must be defined BEFORE startServer for Vercel)
app.use('/', authRoutes);
app.use('/client', clientRoutes);
app.use('/caregiver', caregiverRoutes);
app.use('/admin', adminRoutes);

// Home route
app.get('/', (req, res) => {
    // Check if database is properly configured
    if (!hasDatabaseConfig) {
        return res.status(503).render('error', {
            title: 'Setup Required',
            message: 'ðŸ”§ Care Konnect needs database configuration. Please set DATABASE_URL in environment variables.',
            setupLink: '/setup',
            error: {}
        });
    }
    
    res.render('index', {
        title: 'TunzaCare - Home',
        page: 'home'
    });
});

// Setup status endpoint
app.get('/setup', (req, res) => {
    const isConfigured = !!hasDatabaseConfig;
    const isDatabaseConnected = !!process.env.DATABASE_URL;
    
    res.json({
        status: 'pending_setup',
        nodeEnv: process.env.NODE_ENV,
        isConfigured: isConfigured,
        isDatabaseConnected: isDatabaseConnected,
        message: isConfigured 
            ? 'âœ… Database URL is configured. Waiting for connection...'
            : 'âš ï¸  DATABASE_URL environment variable is not set. Please add it to Vercel Project Settings.',
        documentation: 'https://vercel.com/docs/projects/environment-variables'
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        status: 'ok',
        environment: process.env.NODE_ENV,
        timestamp: new Date().toISOString()
    });
});

// About page
app.get('/about', (req, res) => {
    res.render('about', {
        title: 'About TunzaCare',
        page: 'about'
    });
});

// Error handling middleware
app.use((err, req, res, next) => {
    const status = err.status || 500;
    const isDev = process.env.NODE_ENV === 'development';
    
    console.error(`[${new Date().toISOString()}] Error: ${err.message}`, isDev ? err.stack : '');
    
    res.status(status).render('error', {
        title: 'Error',
        message: isDev ? err.message : 'Something went wrong. Our team has been notified.',
        error: isDev ? err : {}
    });
});

// 404 handler
app.use((req, res) => {
    res.status(404).render('error', {
        title: 'Page Not Found',
        message: 'The page you are looking for does not exist.',
        error: {}
    });
});

// Database synchronization and server startup  
const startServer = async () => {
    try {
        // Only sync database if sequelize is available and configured
        if (sequelize && !missingConfig && hasDatabaseConfig) {
            try {
                await sequelize.sync({ alter: process.env.NODE_ENV === 'development' });
                console.log('âœ… Database synchronized');
            } catch (dbError) {
                console.warn('âš ï¸  Database sync failed (will retry on next request):', dbError.message);
                // Don't exit - allow app to start and handle DB errors gracefully
            }
        } else {
            if (!sequelize) console.warn('âš ï¸  Database module not available.');
            if (missingConfig || !hasDatabaseConfig) {
                console.warn('âš ï¸  Skipping database sync due to missing configuration.');
                console.warn('ðŸ“ Set DATABASE_URL environment variable to enable database features.');
            }
        }

        // Start listening only on non-Vercel environments
        if (!isVercel) {
            const PORT = process.env.PORT || 3000;
            const server = app.listen(PORT, () => {
                console.log(`\nâœ… TunzaCare Portal running on port ${PORT}`);
                console.log(`ðŸŒ Environment: ${process.env.NODE_ENV}`);
                console.log(`ðŸ“ Portal Name: TunzaCare (from Swahili "Tunza" meaning "to care for")\n`);
            });

            // Graceful shutdown
            process.on('SIGTERM', () => {
                console.log('SIGTERM received, shutting down gracefully...');
                server.close(async () => {
                    console.log('Server closed');
                    if (sequelize && sequelize.close) {
                        await sequelize.close();
                    }
                    process.exit(0);
                });
            });
        }
    } catch (err) {
        console.error('âŒ Server startup error:', err);
        if (!isVercel) process.exit(1);
    }
};

// For Vercel: export app immediately (synchronously)
if (isVercel) {
    console.log('âœ… Vercel environment detected - exporting Express app for serverless deployment');
    module.exports = app;
    // Run async startup tasks in background (don't wait for them)
    startServer().catch(err => console.error('Background startup error:', err));
} else {
    // For local/traditional servers: run startup and wait
    startServer();
}